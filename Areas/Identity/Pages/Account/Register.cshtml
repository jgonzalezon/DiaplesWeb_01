@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row justify-content-center my-4">
  <div class="col-12 col-md-10 col-lg-7 col-xxl-6">
    <div class="auth-card">
      <h1 class="mb-2">Crear cuenta</h1>
      <p class="text-muted mb-3">Regístrate para continuar.</p>
      <hr class="hr-soft" />

      <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2" role="alert"></div>
        <div class="mb-3">
            <label asp-for="Input.UserName" class="form-label">Nombre de usuario</label>
            <input asp-for="Input.UserName" class="form-control input-dark" autocomplete="username" />
            <span asp-validation-for="Input.UserName" class="text-danger small"></span>
        </div>

        <div class="mb-3">
          <label asp-for="Input.Email" class="form-label">Email</label>
          <input asp-for="Input.Email" class="form-control input-dark" autocomplete="username" placeholder="nombre@correo.com" />
          <span asp-validation-for="Input.Email" class="text-danger small"></span>
        </div>

        <div class="row g-3">
          <div class="col-12 col-md-6">
            <label asp-for="Input.Password" class="form-label">Contraseña</label>
            <input asp-for="Input.Password" class="form-control input-dark" autocomplete="new-password" placeholder="••••••••" />
            <span asp-validation-for="Input.Password" class="text-danger small"></span>
          </div>
          <div class="col-12 col-md-6">
            <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar contraseña</label>
            <input asp-for="Input.ConfirmPassword" class="form-control input-dark" autocomplete="new-password" placeholder="••••••••" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
          </div>
        </div>

        <button id="registerSubmit" type="submit" class="btn btn-gradient w-100 mt-4">Crear cuenta</button>
      </form>
    </div>
  </div>

  <!-- panel derecho del template (external logins) oculto -->
  <div class="col-lg-5 auth-hide-external"></div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
