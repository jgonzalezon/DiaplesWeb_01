@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<h1>@ViewData["Title"]</h1>
<div class="row justify-content-center my-4">
  <div class="col-12 col-md-10 col-lg-7 col-xxl-6">
    <div class="auth-card">
      <h1 class="mb-2">Entrar</h1>
      <p class="text-muted mb-3">Accede con tu cuenta.</p>
      <hr class="hr-soft" />

      <form id="account" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger small mb-2" role="alert"></div>

        <div class="mb-3">
          <label asp-for="Input.Email" class="form-label">Email</label>
          <input asp-for="Input.Email" class="form-control input-dark" autocomplete="username" placeholder="nombre@correo.com" />
          <span asp-validation-for="Input.Email" class="text-danger small"></span>
        </div>

        <div class="mb-3">
          <label asp-for="Input.Password" class="form-label">Contraseña</label>
          <input asp-for="Input.Password" class="form-control input-dark" autocomplete="current-password" placeholder="••••••••" />
          <span asp-validation-for="Input.Password" class="text-danger small"></span>
        </div>

        <div class="mb-3 form-check">
          <input class="form-check-input" asp-for="Input.RememberMe" />
          <label class="form-check-label" asp-for="Input.RememberMe">Recordarme</label>
        </div>

        <button type="submit" class="btn btn-gradient w-100 mt-2">Entrar</button>

        <div class="d-flex justify-content-between mt-3">
          <a id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste la contraseña?</a>
          <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Crear cuenta</a>
        </div>
      </form>
    </div>
  </div>

  <!-- panel derecho del template (external logins) oculto -->
  <div class="col-lg-5 auth-hide-external"></div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}


