@{
    Layout = null;
    var title = ViewData["Title"] as string ?? "DiaplesWeb";
}
<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>@title - DiaplesWeb</title>
  <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
  <link rel="stylesheet" href="~/css/auth-dark.css" asp-append-version="true" />
</head>
<body class="auth-dark">
  <header class="container py-3">
    <div class="d-flex justify-content-between align-items-center">
      <a class="navbar-brand text-light" asp-controller="Home" asp-action="Index">DiaplesWeb</a>
      <nav class="d-flex gap-3">
        <a class="link-light" asp-area="Identity" asp-page="/Account/Login">Entrar</a>
        <a class="link-light" asp-area="Identity" asp-page="/Account/Register">Registro</a>
      </nav>
    </div>
    <hr class="border-secondary-subtle my-2" />
  </header>

  <main class="container pb-5">
    @RenderBody()
  </main>

  <footer class="container small text-secondary py-4">
    &copy; @DateTime.UtcNow.Year - DiaplesWeb Â·
    <a class="link-secondary" asp-controller="Home" asp-action="Privacy">Privacy</a>
  </footer>

  <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  @RenderSection("Scripts", required: false)
</body>
</html>