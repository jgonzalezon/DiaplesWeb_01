<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Os Diaples d'a Uerba</title>

    <meta name="description" content="Os Diaples d'a Uerba · Espectáculos de fuego, animación y tradición aragonesa. Conoce a la tribu diablera y cómo contactar con nosotros.">
    <link rel="icon" type="image/png" href="~/favicon.png" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
</head>

<body>
    <header class="nav">
        <div class="container nav-wrap">
            <!-- LOGO -->
        <a class="brand" asp-controller="Home" asp-action="Index" style="display:flex; align-items:center; gap:8px;">
            <img src="~/img/Inicio/logo_horizontal-diaples.jpg"
                alt="Logo Os Diaples d'a Uerba"
                style="height:40px; width:auto; border-radius:8px;">
            <span>Os Diaples</span>
        </a>


            <!-- ENLACES -->
            <nav class="nav-links">
                <a asp-controller="Home" asp-action="About">Os Diaples</a>
                <a asp-controller="Home" asp-action="Espectaculos">Espectáculos</a>
                <a asp-controller="Home" asp-action="Galeria">Galería</a>
                <a asp-controller="Home" asp-action="Contact">Contacto</a>
                @if (User.IsInRole("Admin")) {
                    <a asp-controller="Admin" asp-action="Registrations">Admin</a>
                }            
            </nav>

            <!-- BOTÓN / LOGIN -->
            <div style="display:flex; align-items:center; gap:12px;">
                <a class="btn" asp-controller="Home" asp-action="Register">Unirme al aquelarre</a>
                <!-- 🔽 Aquí va el parcial de login/logout -->
                <partial name="_LoginPartial" />
            </div>
        </div>
    </header>

    <main role="main" class="content">
        @RenderBody()
    </main>

    <footer class="footer">
        <div class="container foot">
            <div>
                <div class="brand">
                    <span class="logo"></span>
                    <span>Os Diaples</span>
                </div>
                <p>&copy; @DateTime.Now.Year · Os Diaples d'a Uerba · Cultura, fuego y tradición.</p>
            </div>

            <div>
                <h4>Contenido</h4>
                <a asp-controller="Home" asp-action="About">Os Diaples</a><br />
                <a asp-controller="Home" asp-action="Espectaculos">Espectáculos</a><br />
                <a asp-controller="Home" asp-action="Galeria">Galería</a><br />
                <a asp-controller="Home" asp-action="Contact">Contacto</a>
            </div>

            <div>
                <h4>Legal</h4>
                <a href="#">Términos</a><br />
                <a href="#">Privacidad</a>
            </div>
        </div>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
