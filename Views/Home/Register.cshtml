@model DiaplesWeb.Models.RegistrationViewModel
@{
    ViewData["Title"] = "Inscripción";
}

<div class="container">
    <header class="section-head">
        <h2 class="section-title">Inscripción</h2>
        <p class="section-sub">Rellena tus datos y te contactaremos con los siguientes pasos.</p>
    </header>

    <div class="form-card">
        <form asp-action="Register" method="post" class="form">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="val-summary"></div>

            <div class="form-grid">
                <div class="form-field">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="input" placeholder="Tu nombre y apellidos" />
                    <span asp-validation-for="Name" class="val-msg"></span>
                </div>

                <div class="form-field">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="input" placeholder="tu@email.com" />
                    <span asp-validation-for="Email" class="val-msg"></span>
                </div>

                <div class="form-field">
                    <label asp-for="Experience"></label>
                    <select asp-for="Experience" class="input">
                        <option>Principiante</option>
                        <option>Intermedio</option>
                        <option>Avanzado</option>
                    </select>
                </div>

                <div class="form-field">
                    <label asp-for="Plan"></label>
                    <select asp-for="Plan" class="input">
                        <option>On-Demand</option>
                        <option>Mentoría</option>
                        <option>Empresas</option>
                    </select>
                </div>

                <div class="form-field form-field--full">
                    <label asp-for="Message"></label>
                    <textarea asp-for="Message" class="input" rows="5" placeholder="Cuéntanos tus objetivos, disponibilidad, etc."></textarea>
                </div>
            </div>

            <div class="form-actions">
                <button class="btn" type="submit">Enviar solicitud</button>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}
