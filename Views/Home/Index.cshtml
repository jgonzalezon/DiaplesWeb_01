@{
    ViewData["Title"] = "Inicio";
}

@if (TempData["RegisterOk"] is string ok)
{
    <div class="container" style="margin-top:20px">
        <div class="card" style="border:1px solid var(--border); background:var(--bg-2); padding:14px; border-radius:var(--radius)">
            @ok
        </div>
    </div>
}

<section class="hero">
    <div class="container" style="text-align:center">
        <h1>Bienvenido al curso de .NET MVC</h1>
        <p>Aprende a construir aplicaciones web modernas con ASP.NET Core MVC y EF Core.</p>
        <div class="btn-group">
            <a class="btn" asp-controller="Home" asp-action="About">Sobre el curso</a>
            <a class="btn" asp-controller="Home" asp-action="Register">Inscribirme</a>
        </div>

    </div>
</section>
